<Window x:Class="lb7.FullInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lb7"
        mc:Ignorable="d"
        Title="FullInfo" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Full Information" Grid.Row="0" FontSize="16" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <Label Content="{Binding name}" Grid.Row="1" FontSize="16" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <Label Content="{Binding surname}" Grid.Row="1" FontSize="16" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,50,0,0"/>
        <Label Content="{Binding age}" FontSize="16" Grid.Row="1"  HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,90,0,0"/>
     
        <Label Content="{Binding sex}" FontSize="16" Grid.Row="1" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,130,0,0"/>

    </Grid>
</Window>
