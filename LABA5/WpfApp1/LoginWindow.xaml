<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LoginWindow" Height="550" Width="330">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="LightGoldenrodYellow" Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Grid.Row="0" Text="Login" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Background="PapayaWhip"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Background="AliceBlue" Orientation="Vertical">
            <Label Content="Username" FontSize="14"/>
            <TextBox Text="Type here" GotFocus="FocusClear" LostFocus="FocusBack"  Name="LoginUsername" FontSize="14" />
            <Label Content="Password" FontSize="14"/>
            <TextBox Text="Type here" GotFocus="FocusClear" LostFocus="FocusBack" Name="LoginPassword" FontSize="14" />
            <Button HorizontalAlignment="Left" BorderThickness="0" Content="Forgot the password" Margin="0,10,0,0" Height="20" Width="120" Background="AliceBlue" FontSize="12" />
            <Button Click="LoginUser" HorizontalAlignment="Center" Content="Login" Margin="0,20,0,0" Height="50" Width="100" Background="Ivory" FontSize="16" />
            <StackPanel Grid.Row="2" Orientation="Vertical"  Background="AliceBlue">
                <Label Content="Also you can login with social media" HorizontalAlignment="Center" FontSize="14" Margin="0,15,0,0"  />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <Button Name="Facebook" Click="SocialMediaClick" Width="100" Margin="5,0" Background="AliceBlue" BorderThickness="0">
                        <Image Source="/Images/facebookp.png"/>
                    </Button>
                    <Button  Name="Google" Click="SocialMediaClick" Width="100" Margin="5,0" Background="AliceBlue" BorderThickness="0">
                        <Image Source="/Images/googlep.png"/>
                    </Button>
                    <Button Width="100" Margin="5,0" Background="AliceBlue" BorderThickness="0" Name="Twitter" Click="SocialMediaClick">
                        <Image Source="/Images/twitterp.png"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>   

    </Grid>
</Window>
