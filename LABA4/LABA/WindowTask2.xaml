<Window x:Class="LABA.WindowTask2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LABA"
        mc:Ignorable="d"
        Title="WindowTask2" Height="470" Width="800" Background="LightYellow" MinWidth="800" MinHeight="470">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="10" Width="300" HorizontalAlignment="Left">

            <TextBlock Text="Автозаправка" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Бензин" Width="100" FontSize="16" VerticalAlignment="Center"/>
                <ComboBox Name="Fuel" Width="150" SelectionChanged="FuelComboBox">
                    <ComboBoxItem Content="A-76" IsSelected="True"/>
                    <ComboBoxItem Content="A-92"/>
                    <ComboBoxItem Content="A-95"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Ціна" Width="100" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Name="CostOfFuel" Width="100" Text="2.50" VerticalAlignment="Center" Background="White"/>
                <TextBlock Text="грн." VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Margin="0,15,0,0" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <RadioButton Name="RadioCount" Content="Кількість" IsChecked="True" FontSize="16" VerticalAlignment="Center" Checked="RadioCheck"/>
                        <RadioButton Name="RadioSum" Content="Сума" FontSize="16" VerticalAlignment="Center" Margin="0,10,0,0" Checked="RadioCheck" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBox Name="FuelByCount" Text="0,00" VerticalAlignment="Center" IsEnabled="True" TextChanged="CalculateFuelSum"/>
                        <TextBox Name="FuelBySum"  Text="" IsEnabled="False" VerticalAlignment="Center" Margin="0,10,0,0" TextChanged="CalculateFuelSum"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="5,0,0,0">
                        <TextBlock Text="л." VerticalAlignment="Center"/>
                        <TextBlock Text="грн." VerticalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Margin="0,15,0,0">
                <TextBlock Name="FuelOrCash" Text="До оплати:" FontSize="14" Margin="0,0,0,5"/>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="#F0F0F0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Name="FuelResult" Text="0.00" FontSize="36" FontWeight="Bold" />
                        <TextBlock Name="ValueOrLiters" Text="грн." FontSize="18" VerticalAlignment="Bottom" Margin="5,0,0,5"/>
                    </StackPanel>
                </Border>
            </StackPanel>

        </StackPanel>
        <StackPanel Grid.Column="1" Margin="10" Width="300" HorizontalAlignment="Right">
            <TextBlock Text="Міні-Кафе" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right" Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Ціна" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Кількість" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <CheckBox Name="HotDogCheck" Content="Хот-дог" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,0,0" IsChecked="False" Checked="CafeCheckBox" Unchecked="CafeCheckBox" />
                <TextBlock Text="4,20" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBox Name="HotDogCount" Text="0" Grid.Row="1" Grid.Column="2" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" IsEnabled="False" TextChanged="CafeSum"/>

                <CheckBox Name="HamburgerCheck" Content="Гамбургер" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,0,0" IsChecked="False" Checked="CafeCheckBox" Unchecked="CafeCheckBox"/>
                <TextBlock Text="10,00" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBox Name="HamburgerCount" Text="0" Grid.Row="2" Grid.Column="2" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" IsEnabled="False" TextChanged="CafeSum"/>
                <CheckBox Name="FrenchFriesCheck" Content="Картопля Фрі" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,0,0" IsChecked="False" Checked="CafeCheckBox" Unchecked="CafeCheckBox"/>
                <TextBlock Text="3.40" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBox Name="FrenchFriesCount" Text="0" Grid.Row="3" Grid.Column="2" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" IsEnabled="False" TextChanged="CafeSum"/>
                <CheckBox Name="CokeCheck" Content="Кока Кола" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,0,0" IsChecked="False" Checked="CafeCheckBox" Unchecked="CafeCheckBox"/>
                <TextBlock Text="3.40" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBox Name="CokeCount" Text="0" Grid.Row="4" Grid.Column="2" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" IsEnabled="False" TextChanged="CafeSum"/>
            </Grid>

            <StackPanel Margin="0,51,0,0">
                <TextBlock Text="Кафе до оплати:" FontSize="14" Margin="0,0,0,5"/>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="#F0F0F0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Name="CafeResult" Text="0.00" FontSize="36" FontWeight="Bold" />
                        <TextBlock Text="грн." FontSize="18" VerticalAlignment="Bottom" Margin="5,0,0,5"/>
                    </StackPanel>
                </Border>
            </StackPanel>

        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
            <Image Source="Images/Gasoline2.png" Height="136" Width="276" HorizontalAlignment="Left" Margin="0,0,-50,0"/>
            <Button Name="FinalCalc" Content="Порахувати" HorizontalAlignment="Stretch" Height="50" Click="FinalCalculation"/>
            <Label Name="ShowResult" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Stretch" Margin="50,50,30,50" Content="0.00" FontSize="16" Background="White" VerticalContentAlignment="Center"/>
            <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                <Label Content="Виручка за день" FontSize="16" />
                <Label Name="DailyRevenue" Content="0.00 грн." FontSize="16" VerticalAlignment="Center" Margin="0,25,0,0" />
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Grid.Row="1" Margin="0,0,0,0" Orientation="Horizontal">
            <Image Source="Images/Burger2.png" Height="136" Width="276" HorizontalAlignment="Right"/>
        </StackPanel>

    </Grid>
</Window>
