<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="450" MaxWidth="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
            
        </Grid.RowDefinitions>
        <Border  BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.RowSpan="2" >
            <StackPanel>
                
                <TextBlock Text="Category" FontWeight="Bold" FontSize="16" Margin="10"/>
                <ListBox x:Name="OptionsListBox" Margin="10">
                    <RadioButton Content="Бакалавр" Command="{Binding FilterCommand}" 
                     CommandParameter="Бакалавр" />
                    <RadioButton Content="Среднее" Command="{Binding FilterCommand}" 
                     CommandParameter="Среднее" />
                    <RadioButton Content="Высшее" Command="{Binding FilterCommand}" 
                     CommandParameter="Высшее"/>
                    <RadioButton Content="All" Command="{Binding FilterCommand}" 
                     CommandParameter="All"/>
                  
                   
                </ListBox>
                <Button Content="ДОДАТИ ЗАЯВКУ" Background="BlanchedAlmond" Command="{Binding AddButtonCommand}" />
                <Button Content="ЗМІНИТИ ІНФОРМАЦІЮ" Background="BlanchedAlmond" Command="{Binding ChangeButtonCommand}" />
                <Button Content="ВИДАЛИТИ ЗАЯВКУ" Background="BlanchedAlmond" Command="{Binding DeleteButtonCommand}"  />
            </StackPanel>   
        </Border>
        <Label  Grid.Column="1" Content="ЗАЯВКИ" FontSize="16" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"/>
        <ListBox Grid.Column="1" Grid.Row="1" SelectedItem="{Binding currentapplication, Mode=TwoWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding Applications}" >
            <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                    <WrapPanel ItemWidth="125" ItemHeight="150" Margin="10,10,10,10" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                    </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="10" Background="Transparent">

                        <Border.InputBindings>
                            <MouseBinding Gesture="LeftDoubleClick" 
                                  Command="{Binding DataContext.CheckButtonCommand, 
                                            RelativeSource={RelativeSource AncestorType=Window}}" />
                        </Border.InputBindings>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                            <TextBlock Text="{Binding Pip}" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding Education}" FontStyle="Italic" TextAlignment="Center" TextWrapping="Wrap" Foreground="Gray" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                </DataTemplate>
            </ListBox.ItemTemplate>
            
        </ListBox>

    </Grid>
</Window>
